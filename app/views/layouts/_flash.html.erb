<div class="flash-messages">
  <% if flash.any? %>
    <% flash.each do |type,msg| %>
      <% if msg.present? %>
        <div class="<%= flash_css(type) %>">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <%= msg %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
