<%= form_for(user, html: { class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :name, '用户名', class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, '邮箱', class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :role_id, '角色', class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.select :role_id, role_options(user.role.id), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= f.submit '确定', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
