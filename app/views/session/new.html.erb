<%= title_tag 'sign in' %>
<%= content_for :head do %>
    <%= stylesheet_link_tag 'sign',  media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <ul class="dropdown">
        <%= nav_tag(controller: 'session') do %>
          <%= link_to '登录', sign_in_path %>
        <% end %>
        <%= nav_tag(controller: 'users') do %>
          <%= link_to '注册', sign_up_path %>
        <% end %>
      </ul>
    </div>
    <div class="panel-body">
      <%= form_for(@user, url: sign_in_path, method: :post, class: 'form-horizontal') do |f| %>
        <div class="form-group">
          <%= f.text_field :login, class: 'form-control bottom-no-radius', placeholder: '用户名或邮箱' %>
          <%= f.password_field :password, class: 'form-control top-no-radius', placeholder: '密码' %>
        </div>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label '记住我' %>
          <div class="pull-right">
            <%= link_to "忘记了密码?", new_password_path %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit '登录', class: 'btn btn-block btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


