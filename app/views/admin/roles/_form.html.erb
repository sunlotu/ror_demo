<%= form_for([:admin,role], html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :name, '角色名称', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :code, '角色代码', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit '确定', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
