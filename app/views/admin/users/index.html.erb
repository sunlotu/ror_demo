<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>用户名</th>
      <th>邮箱</th>
      <th>角色</th>
      <th>操作</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role_name %></td>
          <td>
            <%= link_to '查看', user %>
            <%= link_to '编辑', edit_admin_user_path(user) %>
            <%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
